---
import BaseLayout from '@layouts/BaseLayout.astro';
import SocialLinks from '@components/SocialLinks.astro';
import RecentPosts from '@components/RecentPosts.astro';
import FeaturedPosts from '@components/FeaturedPosts.astro';
import HomepageImage from '@components/HomepageImage.astro';
---
<BaseLayout>

  <section id="intro">
    <div class="wrapper">

      <HomepageImage />
      
      <div class="content-section">
        <h1 class="cursive">Tyler Wittig</h1>
        <p>
          Hello! My name is Tyler and I am a full-stack developer.
          This is my website. It is on the web.  
        </p>
        <div id="intro-socials-wrap">
          <SocialLinks />
        </div>
      </div>

    </div>
  </section>

  <FeaturedPosts />
  <RecentPosts />

  <section id="about">
    <div class="wrapper">
      <div class="card surface2">
        <h2>About</h2>
        <p>
          This website is built with
          <a href="https://astro.build/">Astro</a>
          (and a sprinkle of
          <a href="https://react.dev/">React</a>).
          Its CSS styles are inspired by Google's
          <a href="https://m3.material.io/">Material Design</a> system.
          You can
          <a href="/projects/portfolio-2023">read more details about my portfolio website here</a>.
        </p>
      </div>
    </div>
  </section>
  
</BaseLayout>


<style>
  section:not(:last-of-type) { margin-bottom: 1rem; }
  #intro .wrapper {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
    overflow: hidden;
  }

  #intro h1 {
    font-size: 4.5rem;
    line-height: 1.5em;
    color: var(--text2);
  }
  #intro p {
    font-size: 1.5rem;
    line-height: 1.5em;
  }
  #intro-socials-wrap {
    margin: auto;
    width: fit-content;
  }

  @media (min-width: 95ch) {
    #intro .wrapper {
      flex-direction: row-reverse;
      text-align: left;
      gap: 2rem;
      min-height: min(60vh, 70ch);
      padding-block: 2rem;
    }
    #intro-socials-wrap {
      margin-top: 2rem;
      margin-left: 0;
    }
  }
</style>
