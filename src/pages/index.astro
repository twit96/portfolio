---
import BaseLayout from '@layouts/BaseLayout.astro';
import GraphicHero from '@components/Homepage/GraphicHero.astro';
import DecorativeLine from '@components/DecorativeLine/index.astro';
import FeaturedPosts from '@components/Homepage/FeaturedPosts.astro';
import RecentPosts from '@components/RecentPosts.astro';
import TopTags from '@components/Homepage/TopTags.astro';
---


<BaseLayout>
  <div class="content-section">


    {/* Hero Section */}
    <section>
      <div class="wrapper">

        <GraphicHero />

      </div>
    </section>


    {/* Posts and Tags */}
    <section id="content">
      <div class="card content-section shadow-sm surface0 wrapper">

        <FeaturedPosts />
        <RecentPosts />
        <DecorativeLine />
        <TopTags />

      </div>
    </section>

    
  </div>
</BaseLayout>
