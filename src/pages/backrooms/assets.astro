<style>

  #og-image-wrap,
  #bc-front-wrap,
  #bc-back-wrap { overflow-x: auto; }

  #og-image-wrap h2,
  #bc-front-wrap h2,
  #bc-back-wrap h2 { text-align: center; }
  
  /* ---------- Open Graph Image ---------- */
  #og-image {
    align-items: center;
    color: var(--text2);
    display: flex;
    gap: 5rem;
    justify-content: center;
    overflow: hidden;
    text-align: center;
    /* 
    Force card to be the recommended og image aspect ratio and size. 
    Google "og image aspect ratio" for more details.
    */
    /* aspect-ratio: 1.91 / 1; */
    height: 630px;
    width: 1200px;
    min-height: 630px;
    min-width: 1200px;
  }

  #og-image .img-wrap {
    clip-path: url(#jagged_circle);
    line-height: 0;
  }
  #og-image .img-wrap img {
    max-width: 40ch;
    width: 100%;
  }

  #og-image h3 {
    font-size: 6rem;
    line-height: 1.5em;
  }
  #og-image p {
    font-size: 3rem;
    line-height: 1.75em;
    opacity: 0.6;
  }


  /* ---------- Business Card ---------- */
  .business-card {
    --color: var(--text2);
    /* 
    Force card to be the recommended business card aspect ratio and size. 
    3.5 x 2 Ratio, or 1050px x 600px.
    */
    /* aspect-ratio: 3.5 / 2; */
    height: 600px;
    width: 1050px;
    min-height: 600px;
    min-width: 1050px;
  }

  .logo-wrap {
    height: var(--_height);
    aspect-ratio: 1 / 1;
    clip-path: url(#jagged_circle);
    display: grid;
    place-items: center;
  }
  .logo-wrap h3 {
    font-size: calc(var(--_height) * 0.325);
    line-height: 0.9;
  }


  /* ----- Business Card Front ----- */
  #bc-front {
    text-align: center;
    display: grid;
    place-items: center;
  }
  #bc-front .logo-wrap { --_height: 480px; }


  /* ----- Business Card Back ----- */
  #bc-back {
    position: relative;
  }


  #bc-back .left {
    position: absolute;
    inset: 50px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  #bc-back .name-title-wrap {
    color: var(--color);
  }
  #bc-back .name {
    font-size: 80px;
    line-height: 1em;
    padding-bottom: 0.5em;
  }
  #bc-back .title {
    font-size: 45px;
    line-height: 1em;
    opacity: 0.6;
  }

  #bc-back hr {
    border: 0;
    border-bottom: 7px solid var(--color);
    max-width: 150px;
  }

  #bc-back ul {
    list-style: none;
    display: grid;
    gap: 15px;
    line-height: 1;
    color: var(--text2);
    padding: 30px;
  }
  #bc-back li {
    display: flex;
    gap: 1ch;
    align-items: center;
    font-size: 40px;
  }
  #bc-back li svg {
    fill: var(--text2);
  }

  #bc-back .logo-wrap {
    --_height: 150px;
    position: absolute;
    top: 50px;
    right: 50px;
  }

</style>
