<style>
  /* Left */
  .left {
    position: absolute;
    inset: 50px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .name-title-wrap {
    color: var(--color);
  }
  .name {
    font-size: 80px;
    line-height: 1em;
    padding-bottom: 0.5em;
  }
  .title {
    font-size: 45px;
    line-height: 1em;
    opacity: 0.6;
  }

  /* hr {
    border: 0;
    border-bottom: 7px solid var(--color);
    max-width: 150px;
  } */

  ul {
    list-style: none;
    display: grid;
    gap: 15px;
    line-height: 1;
    color: var(--text2);
    padding: 30px;
  }
  li {
    display: flex;
    gap: 1ch;
    align-items: center;
    font-size: 40px;
  }
  li svg {
    fill: var(--text2);
  }


  /* Right */
 .right {
    position: absolute;
    top: 50px;
    right: 50px;
  }

</style>
