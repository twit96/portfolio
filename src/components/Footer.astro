---
import { SITE_TITLE, SITE_AUTHOR } from '@consts.js';
import ContactLinks from '@components/ContactLinks.astro';
import DecorativeLine from '@components/DecorativeLine/index.astro';
---

<footer class="layout layout--list wrapper">

  <p class="cursive">{SITE_TITLE}</p>

  <nav aria-label="Contact Links">
    <ContactLinks />
  </nav>

  <DecorativeLine />

  <p class="copyright">
    &copy; {`${new Date().getFullYear()} ${SITE_AUTHOR}`}
  </p>
    
</footer>


<style>
  footer {
    align-items: center;
    margin-top: 1rem;
    text-align: center;
  }
  .copyright { font-size: 0.75em; }
</style>
