---
import SocialLinks from '@components/SocialLinks.astro';
import NavigationLinks from '@components/NavigationLinks.astro';
---
<footer>
  <div class="wrapper">

    <div>
      <span class="cursive">Tyler Wittig | Full-Stack Developer</span>
      <nav aria-label="Site Navigation (Footer)">
        <NavigationLinks />
      </nav>
    </div>
    
    <div>
      <nav aria-label="Contact Links" class="socials">
        <SocialLinks />
      </nav>
      <span class="copyright">
        &copy; {new Date().getFullYear()} Tyler Wittig
      </span>
    </div>
    
  </div>
</footer>

<style>
  footer { text-align: center; }

  footer .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  footer .wrapper > div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .socials { align-self: center; }

  .copyright { font-size: 0.75em; }

  @media (min-width: 80ch) {
    footer .wrapper > div {
      align-items: center;
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
