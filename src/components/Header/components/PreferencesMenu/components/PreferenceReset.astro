<style>
  button {
    --_size: 1.5rem;
    flex-grow: 1;
    height: var(--_size);
    line-height: 0;
    width: var(--_size);
  }
  button[disabled] {
    cursor: not-allowed;
    opacity: 0.15;
  }
  svg {
    fill: currentColor;
    transition: 0.5s transform ease;
  }
  @media (hover: hover) {
    button:not([disabled]):hover svg {transform: rotate(360deg); }
  }
</style>


<script defer>

  let theme_reset_btn = document.getElementById("theme-reset-btn");

  function resetTheme() {
		let html = document.documentElement;

    const defaults = JSON.parse(localStorage.getItem("defaults"));
    if (!defaults) throw new Error('Theme defaults not found.');

    Object.keys(defaults).forEach(k => {
      localStorage.setItem(k, defaults[k]);
      stored_key = defaults[k];
			html.dataset[k] = stored_key;
		});

    configModeInput();
    configColorInputs();
    configSchemeInputs();
    updateMetaThemeColor();
  }
  theme_reset_btn.onclick = resetTheme;

</script>
