---
import ContactLinks from '@components/ContactLinks.astro';
---

<div class="hero">


  <div id="hero-img-wrap">

    <svg height="0" width="0">
      <defs>
        <clipPath id="wavy_circle" clipPathUnits="objectBoundingBox">
          <path transform="scale(0.0045454545,0.0045454545)" d="M219.439 110C219.439 119.541 210.459 127.398 208.214 136.378C205.969 145.357 209.337 157.143 204.847 165C200.357 172.857 188.01 175.663 181.837 182.398C175.102 189.133 172.857 200.918 164.439 205.408C156.582 209.898 144.796 206.531 135.816 208.775C126.837 211.02 118.98 220 109.439 220C99.898 220 92.0408 211.02 83.0612 208.775C74.0816 206.531 62.2959 209.898 54.4388 205.408C46.5816 200.918 43.7755 188.571 37.602 182.398C30.8673 175.663 19.0816 173.418 14.5918 165C10.102 157.143 13.4694 145.357 11.2245 136.378C8.97959 127.398 0 119.541 0 110C0 100.459 8.97959 92.602 11.2245 83.6224C13.4694 74.6429 10.102 62.8571 14.5918 55C19.0816 47.1429 31.4286 44.3367 37.602 37.602C44.3367 30.8673 46.5816 19.0816 55 14.5918C62.8571 10.102 74.6429 13.4694 83.6224 11.2245C92.602 8.97959 100.459 0 110 0C119.541 0 127.398 8.97959 136.378 11.2245C145.357 13.4694 157.143 10.102 165 14.5918C172.857 19.0816 175.663 31.4286 181.837 37.602C188.571 44.3367 200.357 46.5816 204.847 55C209.337 62.8571 205.969 74.6429 208.214 83.6224C210.459 92.0408 219.439 100.459 219.439 110Z"/>
        </clipPath>
      </defs>
    </svg>
    <div id="homepage-img" class="img-wrap">
      <img 
        srcset="
          https://storage.googleapis.com/tylerwittig.com/homepage/portrait/300x300.webp 300w,
          https://storage.googleapis.com/tylerwittig.com/homepage/portrait/400x400.webp 400w,
          https://storage.googleapis.com/tylerwittig.com/homepage/portrait/500x500.webp 500w,
          https://storage.googleapis.com/tylerwittig.com/homepage/portrait/600x600.webp 600w
        "
        sizes="
          (max-width: 350px) 300px,
          (max-width: 550px) 400px,
          (max-width: 759px) 500px,
          600px
        "
        src="https://storage.googleapis.com/tylerwittig.com/homepage/portrait/original.jpg"
        alt="Photo of Tyler Wittig wearing a grey baseball cap and standing in front of a brick wall."
        width="600"
        height="600"
      >
    </div>
    <script is:inline>
      if (navigator.userAgent.search("Firefox") > -1) {
        /* if firefox, remove profile animation to avoid browser bug */ 
        document.getElementById('homepage-img').style.animation = "none";
        document.querySelector('#homepage-img img').style.animation = "none";
      }
    </script>
    
  </div>


  <div
    class="content-section"
    id="hero-content-wrap"
  >
    <h1 class="cursive">Tyler Wittig</h1>
    <p>
      Hello! My name is Tyler and I am a full-stack web developer.
      This is my website. It is on the web.  
    </p>
    <nav aria-label="Social Links">
      <ContactLinks links={["Codepen", "GitHub", "LinkedIn", "RSS"]} />
    </nav>
  </div>
  
  
</div>


<style>
  .hero {
    align-items: center;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    text-align: center;
  }
  #hero-img-wrap { flex-basis: 33%; }
  #hero-content-wrap { flex-basis: 66%; }


  svg {
    position: fixed;
    transform: translateX(100vw);
  }
  #homepage-img {
    clip-path: url(#wavy_circle);
    line-height: 0;
  }
  #homepage-img img {
    max-width: 40ch;
    width: 100%;
  }
  @media (prefers-reduced-motion: no-preference) {
    #homepage-img { animation: 60s rotation linear infinite; }
    #homepage-img img { animation: 60s rotation linear reverse infinite; }
  }
  @keyframes rotation {
    0% { transform: rotate(0); }
    100% { transform: rotate(360deg); }
  }


  #hero-content-wrap.content-section { --_content--gap: 1.5em; }
  h1 {
    color: var(--text2);
    font-size: min(4.5rem, 14vmin);
    line-height: 1.75em;
  }
  p {
    font-size: 1.25rem;
    line-height: 1.5em;
    max-width: 46ch;
    text-wrap: balance;
  }
  nav { margin: auto; }


  @media (min-width: 95ch) {
    .hero {
      flex-direction: row-reverse;
      gap: 1rem;
      justify-content: space-between;
      min-height: min(55vh, 65ch);
      text-align: left;
    }
    
    #hero-content-wrap.content-section { --_content--gap: 2rem; }
    p {
      font-size: 1.5rem;
      text-wrap: wrap;
    }
    nav { margin-left: 0; }
  }
</style>
