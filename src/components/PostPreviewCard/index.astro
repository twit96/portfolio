---
import CompactCardContent from "./CompactCardContent.astro";
import MinimalCardContent from "./MinimalCardContent.astro";

const { post, cardType='compact', styles='' } = Astro.props;

const cardClass = cardType==="minimal" ? "surface1" : "surface3";
---


{
  post && cardType &&
  <article
    class={`card preview-card--${cardType} ${cardClass}`}
    style={styles}
  >

    {
      cardType==="minimal" &&
      <MinimalCardContent post={post} />
    }

    {
      cardType==="compact" &&
      <CompactCardContent post={post} />
    }

  </article>
}


<style>
  article {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  article.preview-card--minimal { gap: 0.5rem; }
  article.preview-card--compact { gap: 1rem; }
</style>
